{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "title": "Alcohol Consumption vs Sucicide Rate",
  "data": {
    "url": "https://raw.githubusercontent.com/arzukhanna9/FIT3179_Assignment2/main/data/full_alcohol_data.csv"
  },
  "params": [
    {
      "name": "Income_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 52000,
        "step": 100,
        "name": "Minimum Income:"
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.alcconsumption > 0"},
    {"filter": "datum.suicideper100th > 0"},
    {"filter": "datum.incomeperperson > Income_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "alcconsumption",
      "type": "quantitative",
      "title": "Alcohol Consumption per Adult (Litres)",
      "axis": {"tickCount": 7},
      "scale": {"domain": [0, 20]}
    },
    "y": {
      "field": "suicideper100th",
      "type": "quantitative",
      "title": "Suicide per 100,000",
      "axis": {"tickCount": 6},
      "scale": {"domain": [0, 36]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "incomeperperson",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 1000, 5000, 10000, 20000, 40000],
            "range": [0, 10, 50, 100, 250, 500, 800]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.7},
          "value": 0.2
        },
        "tooltip": [
          {"field": "country", "type": "nominal"},
          {"field": "alcconsumption", "type": "quantitative", "format": ","},
          {"field": "incomeperperson", "type": "quantitative", "format": ","},
          {"field": "suicideper100th", "type": "quantitative", "format": ","}
        ]
      }
    },
        {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 10.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['country'] == 'South Korea'|| datum['country'] == 'Australia'|| datum['country'] == 'United Kingdom' || datum['country'] == 'Russia' || datum['country'] == 'United States of America' || datum['country'] == 'China' || datum['country'] == 'New Zealand'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}
